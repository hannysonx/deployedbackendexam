@using BackendExamModel;
@model User
@{

    string birthdatevalue = Model.birth_dt.HasValue ? Model.birth_dt.Value.ToString("yyyy/MM/dd") : "";
}
<style>
    label.control-label {
        text-align: right;
    }
</style>

@using (Html.BeginForm("AddEditClient", "Home", FormMethod.Post, new { id = "frmAddEditClient" }))
{
    @Html.HiddenFor(a => a.user_id)
    <div class="form-group">
        <div class="row">
            <label for="txtUsername" class="control-label col-sm-3">Username</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.user_nm, new { @class = "form-control", @id = "txtUsername", @placeholder = "Username" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label for="txtFirstname" class="control-label col-sm-3">First Name</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.first_nm, new { @class = "form-control", @id = "txtFirstnm", @placeholder = "First Name" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label for="txtLastnm" class="control-label col-sm-3">Last Name</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.last_nm, new { @class = "form-control", @id = "txtLastnm", @placeholder = "Last Name" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label for="txtPhoneno" class="control-label col-sm-3">Phone No.</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.phone_nb, new { @class = "form-control", @id = "txtPhoneno", @placeholder = "Phone No.", @data_numeric_only = "true" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label for="txtEmail" class="control-label col-sm-3">Email</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.email_ad, new { @class = "form-control", @id = "txtEmail", @placeholder = "Email", @data_valid_email = "true" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label for="txtAddress" class="control-label col-sm-3">Address</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(a => a.address_tx, new { @class = "form-control", @id = "txtAddress", @placeholder = "Address" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label for="txtNotes" class="control-label col-sm-3">Notes</label>
            <div class="col-sm-9">
                @Html.TextAreaFor(a => a.notes_tx, new { @class = "form-control", @id = "txtNotes" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label for="txtBirthdt" class="control-label col-sm-3">Birth Date</label>
            <div class="col-sm-9">


                @Html.TextBoxFor(a => a.birth_dt, new { @class = "form-control", @id = "txtBirthdt", @placeholder = "Birth Date", @data_date_only = "true", @Value = birthdatevalue })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <label for="optUsertype" class="control-label col-sm-3">User Type</label>
            <div class="col-sm-9">
                <select class="select" name="user_ty" id="optUsertype">
                    <option value="0">Admin</option>
                    <option value="1">Client</option>
                </select>
            </div>
        </div>
    </div>
}
